      "baseUrl": ".",
      "paths": {
        "@app/*": ["src/scripts/*"]
      },
      "lib": [
        "es2015",
        "dom",
      ],
      "types": ["react"],
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react"
  },
  "include": [
      "./src/**/*"
  ]
}